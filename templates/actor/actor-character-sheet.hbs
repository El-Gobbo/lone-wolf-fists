<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  <div class="sheet">
  {{!-- Prana sidebar --}}
  <div class="sidebar-small">
    <ol class='items-list full-size'>
      <li class="prana resources">
        <div class="resource flex-group-center">
          {{#if inCombat}}
          <div>
            <button type="button" id="prana-flare">Prana Flare</button>
          </div>
          {{/if}}
          <label for="system.prana.current" class="resource-label">Prana</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input {{#unless inCombat}} class="active-prana-gen" {{else}} class="prana-gen" {{/unless}} type="text" name="system.prana.gen.outOfCombat" value="{{system.prana.gen.outOfCombat}}" data-dtype="Number" disabled/>
            <input type="text" class="flex-2" name="system.prana.current" value="{{system.prana.current}}" data-dtype="Number"/>
            <input {{#if inCombat}} class="active-prana-gen" {{else}} class="prana-gen" {{/if}} type="text" name="system.prana.gen.inCombat" value="{{system.prana.gen.inCombat}}" data-dtype="Number" disabled/>
          </div>
        </div>
        <div class="grid grid-2col grid-close">
          <div class="resource flex-group-center">
            <label for="system.pool.value" class="pool-label">Pool</label>
            <input type="text" name="system.pool.value" value="{{system.pool.value}}" readonly disabled data-dtype="Number"/>
          </div>
          <div class="resource flex-group-center">
            <label for="system.pool.recovery" class="pool-label">Recover</label>
            <input type="text" name="system.pool.recovery" value="{{system.pool.recovery}}" readonly disabled data-dtype="Number"/>
          </div>
        </div>
      </li>

      <li class="resource flex-group-center flex-column">
        <label for="system.chakras.active" class="resource-label">Chakras</label>
        <div class="active-chakras small-box">
          <input type="number" class="full-size" name="system.chakras.active" value="{{system.chakras.active}}" data-dtype="Number"/>
          {{#if inCombat}}
          {{#unless (comparison system.chakras.active 7)}}
          <img
            class="chakra-increase"
            src="systems/lone-wolf-fists/assets/arrup.png"
            title='Open Chakra'
            width='10'
            height='10'
          />
          {{/unless}}
          {{#unless (comparison system.chakras.active system.chakras.value)}}
          <img
            class="chakra-decrease"
            src="systems/lone-wolf-fists/assets/arrdown.png"
            title='Close Chakra'
            width='10'
            height='10'
          />
          {{/unless}}
          {{/if}}
        </div>
      </li>
    {{#each chakras as | skill | }}
    <li class='item flex-group-center'>
      <div class='item-image' data-imbtype="{{skill}}">
          <img
            class="chakra-image"
            {{#if (lookup ../system.chakras.awakened skill)}}
            src='systems/lone-wolf-fists/assets/Chakras/{{skill}} Awakened.png'
            {{else}}
            src='systems/lone-wolf-fists/assets/Chakras/{{skill}}.png'
            {{/if}}
            title='{{skill}}'
            width='40'
            height='40'
          />
      </div>
      <h4 class="skill">
        {{#if (lookup ../system.chakras.awakened skill)}}<strong>{{skill}}</strong>
        {{else}}{{skill}}
        {{/if}}
      </h4>
    </li>
    {{/each}}

  </div> 
  {{!-- Main section of the sheet --}}
  <div class="body">
  <header class="sheet-top">
    <div class="sidebar flex-group-center">
      <img class="profile-img flex-group-center" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="120" width="120"/>
      <div class="resources">
        <div id="degree" class="resource flex-group-center">
          <label for="system.degree.value" class="resource-label">Degree</label>
          <div class="">
            <input id="degree-input" class="small-box" type="text" name="system.degree.value" value="{{system.degree.value}}" data-dtype="String"/>
          </div>
        </div>
        <div class="grid grid-2col">
          <div id="effort" class="resource flex-group-center flex-column">
            <label for="system.power.value" class="resource-label">Effort</label>
            <div id="effort-display" class="flex-group-center flex">
              <h4><strong>{{system.power.value}}</strong></h4>
            </div>
          </div>
          <div id="effortless" class="resource flex-group-center">
            <label for="system.effortless.value" class="resource-label">E-less</label>
            <div class="">
              <input type="text" name="effortless" value="Rank {{system.effortless.value}}" data-dtype="String" readonly/>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="header-fields">
      <div class="title grid grid-8col grid-close">
        <h1 id="name" class="charname grid-span-5"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
        <h1 id="archName" class="charname grid-span-3"><input name="system.archetype" type="text" value="{{system.archetype}}" placeholder="Archetype" readonly disabled></h1>
        <h1 id="clanName" class="charname grid-span-8"><input name="system.clan" type="text" value="{{system.clan}}" placeholder="Clan"></h1>
      </div>
      <div class="flex-5 tall-box flex-column">
        <div class="damage resources flexrow">
          <div id="health" class="flex-4 resource flex-group-center inner-margin">
            <div class="flex-4">
              <label for="system.health.current" class="resource-label">Health</label>
              <div id="health" class="resource-content max-min flexrow flex-group-center">
                <input id="health-current" class="stat-current" type="text" name="system.health.current" value="{{system.health.current}}" data-dtype="Number"/>
                <input id="health-max" class="stat-max" type="text" name="system.health.max" value="{{system.health.max}}" readonly disabled data-dtype="Number"/>
              </div>
            </div>
          </div>
          <div class="rest-container flex flex-group-center">
            <div id="rest-button" class=" flex-group-center flexshrink" title="Rest and recover health">
            </div>
          </div>
          <div class="flex-4 resource flex-group-center inner-margin">
            <div>
            <label for="system.aura.current" class="resource-label">Aura</label>
              <div id="aura" class="resource-content max-min flexrow flex-group-center">
                <input id="aura-current" class="stat-current" type="text" name="system.aura.current" value="{{system.aura.current}}" data-dtype="Number"/>
                <input id="aura-max" class="stat-max" type="text" name="system.aura.max" value="{{system.aura.max}}" readonly disabled data-dtype="Number"/>
              </div>
            </div>
          </div>
          <div class="flex-2 resource-content flex-group-center flex-between inner-margin">
            <label for="system.armorValue" class="resource-label">Armor</label>
              <div class="flex-group-center flex">
                <div class="armor-icon flex flex-group-center">
                  <img
                    class="full-size"
                    src='systems/lone-wolf-fists/assets/Armor-symbol.svg'
                    title='Armor symbol'
                    width='36'
                    height='36'
                  />
                  <h4 class="armor-value full-size">{{armorValue}}</h4>
                </div>
              </div>
          </div>
        </div>

        <div class="resources grid grid-9col grid-close">
          {{! display focus slots up to the value determined by level, hide all subsequent slots}}
          <label for="system.foci.value" class="resource-label grid-span-2">Focus Slots</label>
          {{#each system.foci.slots}}
            <div {{#unless (lessThan @index ../system.foci.value )}} hidden {{/unless}} class="resource flex-group-center">
              <input type="text" id="focus-{{@index}}" class="focusSlot" data-findex="{{@index}}" name="system.foci.slots.{{@index}}" value="{{this}}" data-dtype="Number">
            </div>
          {{/each}}
        </div>
      </div>
      {{#if skill.missing}}
      <button type="submit" id="newMasteries" data-missing="{{skill.difference}}">Choose your masteries</button>
      {{/if}}
    </div>
  </header>
  {{! If the player does not have enough masteries, prompt them to add more}}


  {{! if no archetype has been chosen yet, prompt the player to choose one}}
  {{#if (comparison system.archetype "")}}
  <section>
    <h1 class="flex-group-centre">Choose an archetype</h1>
  
  </section>
  {{else}}
  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="core">Imbalances</a>
    <a class="item" data-tab="techniques">Techniques</a>
    <a class="item" data-tab="items">Items</a>
    <a class="item" data-tab="dharma">Dharma</a>
    {{! Hidden final tab where the GM can change around character options}}
    <a class="item" data-tab="config" {{#unless isGM}} hidden {{/unless}}>Config</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    <div class="tab core" data-group="primary" data-tab="core">
      {{> "systems/lone-wolf-fists/templates/actor/parts/actor-imbalances.hbs"}}
    </div>

    {{!-- Biography Tab --}}
    <div class="tab items" data-group="primary" data-tab="items">
      {{!-- Editors must receive enriched text data from getData to properly handle rolls --}}
      {{> "systems/lone-wolf-fists/templates/actor/parts/actor-items.hbs"}}
    </div>

    {{!-- Owned Items Tab --}}
    <div class="tab dharma" data-group="primary" data-tab="dharma">
       {{> "systems/lone-wolf-fists/templates/actor/parts/actor-dharma.hbs"}}
    </div>

    {{!-- Owned Spells Tab --}}
    <div class="tab techniques" data-group="primary" data-tab="techniques">   
      {{> "systems/lone-wolf-fists/templates/actor/parts/actor-techniques.hbs"}}
    </div>
    <div class="tab config" data-group="primary" data-tab="config">
      {{> "systems/lone-wolf-fists/templates/actor/parts/actor-config.hbs"}}
    </div>

  </section>
  {{/if}}
  </div>
  <div class="sidebar">
    <ol class='items-list full-size'>
      {{#each skill.mastered as | skill |}}
      <li class='item flex-group-center' data-item-id="{{skill._id}}">
        <div class='item-image'>
            <a
              class='item-control item-edit'
              title='{{localize "DOCUMENT.Update" type='Item'}}'
            >
            <img
              class="mastery-image"
              src='{{skill.img}}'
              title='{{skill.name}}'
              width='40'
              height='40'
            />
          </a>
        </div>
        <h4 class="skill"><strong>{{skill.name}}</strong></h4>
      </li>
      {{/each}}
      {{#each skill.unmastered as | skill |}}
      <li class='item flex-group-center' data-item-id="{{skill._id}}">
        <div class='item-image'>
            <a
              class='item-control item-edit'
              title='{{localize "DOCUMENT.Update" type='Item'}}'
            >
            <img
              class="skill-image"
              src='{{skill.img}}'
              title='{{skill.name}}'
              width='40'
              height='40'
            />
          </a>
        </div>
        <h4 class="skill">{{skill.name}}</h4>
      </li>
      {{/each}}
    </ol>
  </div> 
</div>

</form>
