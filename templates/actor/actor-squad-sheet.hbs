<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-top">
    <div class="sidebar-small flex-group-center">
      <img class="profile-img monster flex-group-center" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="80" width="80"/>
      <div class="resources">
        <div id="effort" class="resource flex-group-center flex-column">
          <label for="power-input" class="resource-label">Ferocity</label>
          <div id="effort-display" class="flex-group-center flex">
            <h4 id="power-input"><strong>{{system.power.value}}</strong></h4>
          </div>
        </div>
      </div>
    </div>
    <div class="header-fields position-relative flex-column">
      <div class="title">
        <h1 id="name" class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
      </div>
      <div class="damage resources flexrow monster-sheet">
        <div id="health" class="flex-4 resource flex-group-center inner-margin">
          <div class="flex-4">
            <label for="health-current" class="resource-label">Health</label>
            <div id="health" class="resource-content max-min flexrow flex-group-center">
              <input id="health-current" class="stat-current" type="text" name="system.health.current" value="{{system.health.current}}" data-dtype="Number"/>
              <input id="health-max" class="stat-max" type="text" name="system.health.max" value="{{system.health.max}}" readonly disabled data-dtype="Number"/>
            </div>
          </div>
        </div>
        <div class="flex-2 resource-content flex-group-center flex-between inner-margin">
          <label for="armor-input" class="resource-label">Armor</label>
          <div class="flex-group-center flex">
            <div class="armor-icon monster-sheet flex flex-group-center">
              <img
                class="full-size"
                src='systems/lone-wolf-fists/assets/Armor-symbol.svg'
                title='Armor symbol'
                width='40'
                height='40'
              />
              <h4 class="armor-value full-size">{{system.armor}}</h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="items">Items</a>
    <a class="item" data-tab="effects">Effects</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">
      <div id="imbalance-header" class="item flexrow items-header grid grid-7col">
        <div class="flex-group-center grid-span-3">Creature</div>
        <div class="flex-group-center">Effort</div>
        <div class="flex-group-center">Health</div>
        <div class="flex-group-center">Numbers</div>
        <div class='item-controls flex-group-center'>
          <a
            class='member-create'
            title='Create member'
            data-type='imbalance'
          >
            <i class='fas fa-plus'></i>
          </a>
        </div>
      </div>
      {{#each members}}
      <div class='item flexrow grid grid-7col grid-table squad-members' data-id='{{this.id}}'>
        <div class='item-name flex-group-center grid-span-3' data-imbtype="creature">
          <input class="member-choice" type="text" name="this.creature" value="{{this.creature}}">
        </div> 
        <div class='item-name flex-group-center' data-imbtype="effort">
          <input class="member-choice" type="text" name="this.effort" value="{{this.effort}}">
        </div>
        <div class='item-name flex-group-center' data-imbtype="health">
          <input class="member-choice" type="text" name="this.health" value="{{this.health}}">
        </div>
        <div class='item-name flex-group-center' data-imbtype="quantity">
          <input class="member-choice" type="text" name="this.quantity" value="{{this.quantity}}">
        </div>
        <div class="member-controls">
          <a
            class='member-delete'
            title='{{localize "DOCUMENT.Delete" type='Item'}}'
          >
          <i class='fas fa-trash'></i>
          </a>
        </div>
      </div>
      {{/each}}
    </div>

    {{!-- Owned Items Tab --}}
    <div class="tab items" data-group="primary" data-tab="items">
       {{> "systems/lone-wolf-fists/templates/actor/parts/actor-items.hbs"}}
    </div>

    {{!-- Active Effects Tab --}}
    <div class="tab effects flexcol" data-group="primary" data-tab="effects">
      {{> "systems/lone-wolf-fists/templates/actor/parts/actor-effects.hbs"}}
    </div>

  </section>
</form>

